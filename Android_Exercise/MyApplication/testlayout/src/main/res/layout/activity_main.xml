<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shao.testlayout.MainActivity"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#66ccff"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        >
        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="星宝营"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#ffffff"
        />

        <TextView
            android:id="@+id/top_description"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/top_title"
            android:text="星宝自我主张大本营"
            android:textColor="#ff0000"
            android:textSize="15sp"
            />

        <ImageView
            android:id="@+id/like_image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            />
        <ImageView
            android:id="@+id/up_image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_toLeftOf="@id/like_image"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/recommend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#808080"
        android:gravity="left|center_vertical"
        android:text="星宝推荐 >"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fba000"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/vidio_view1"
            android:layout_width="245dp"
            android:layout_height="238dp"
            android:background="#123456"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/vidio_view2"
            android:layout_width="245dp"
            android:layout_height="238dp"
            android:background="#123456"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/vidio_view3"
            android:layout_width="250dp"
            android:layout_height="238dp"
            android:background="#123456"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#654321"
        >
        <TextView
            android:id="@+id/vidio_description1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#789000"
            android:text="现代舞"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/vidio_top_description2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7890F0"
            android:text="暑期绘画班展览"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/vidio_top_description3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7FFA00"
            android:text="小红花练习曲"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_centerInParent="false"
            />
        <TextView
            android:id="@+id/vidio_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vidio_description1_title"
            android:text="小皮蛋"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="70dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/vidio_description2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="小画家"
            android:textSize="20sp"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:layout_below="@+id/vidio_top_description2_title"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/vidio_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小公主"
            android:textSize="20sp"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="70dp"
            android:layout_below="@+id/vidio_top_description3_title"
            android:layout_alignLeft="@+id/vidio_top_description3_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/activity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#808080"
        android:gravity="left|center_vertical"
        android:text="活动热榜 >"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        />
     <ListView
         android:id="@+id/my_list_view"
         android:layout_width="match_parent"
         android:layout_height="600dp"
         android:background="#0000ff"
         ></ListView>
</LinearLayout>
</ScrollView>